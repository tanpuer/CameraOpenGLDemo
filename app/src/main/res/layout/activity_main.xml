<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/front_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开前置摄像头"
        />

    <Button
        android:id="@+id/back_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开后置摄像头"
        />

    <Button
        android:id="@+id/front_camera_btn_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开前置摄像头V2"
        />

    <Button
        android:id="@+id/back_camera_btn_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开后置摄像头V2"
        />

</LinearLayout>